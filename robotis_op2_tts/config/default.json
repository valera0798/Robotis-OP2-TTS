{
  "audio_file_format": "mp3",
  "audio_file_player": {
    "name": "aplay",
    "command": "aplay {file}"
  },
  "tts_engines": {
    "cloud": {
      "priority": 0,
      "google_cloud_tts": {
        "call_params": {
          "language_code": "ru-RU",
          "name": "ru-RU-Wavenet-B",
          "speaking_rate": 0.9,
          "pitch": 6.0,
          "effects_profile_id": ["telephony-class-application"]
        },
        "network": {
          "test_ping_destination": "cloud.google.com",
          "test_download_destination": "google.com"
        }
      }
    },
    "onboard": {
      "priority": 1,
      "festival": {
        "play": {
          "command": "echo {text} | festival --tts {call_params}",
          "call_params": {
            "--language": "russian"
          }
        },
        "save": {
          "command": "cat {text} | text2wave -o {file} -eval {expression}",
          "expression": "'(voice_msu_ru_nsh_clunits)'"
        }
      }
    }
  }
}